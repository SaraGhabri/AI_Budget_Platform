
spring.application.name=budget-service

server.port=portNumber

#spring.datasource.driver-class-name=com.mysql.jdbc.Driver
spring.datasource.url=jdbc:mysql://localhost:PortNumber/DataBaseName?createDatabaseIfNotExist=true
spring.datasource.username=[VOTRE_USERNAME_MYSQL]
spring.datasource.password=[VOTRE_MDP_MYSQL]



### JPA / HIBERNATE ###
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.hibernate.dialect=org.hibernate.dialect.MySQL5Dialect

# Spring AI MCP Server Configuration
spring.ai.mcp.server.base-path=/mcp
spring.ai.mcp.server.protocol=streamable

eureka.client.service-url.default-zone=http://localhost:8761/eureka/
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true



# Logging (pour debug)
logging.level.com.budget.expense=INFO
logging.level.org.springframework.cloud.openfeign=DEBUG